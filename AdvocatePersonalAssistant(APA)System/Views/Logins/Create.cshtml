@model AdvocatePersonalAssistantSystem.Models.Login

@{
    ViewData["Title"] = "Create";
}


    <style>

        body{

            background-image:url(../images/1.jpg);
            overflow:hidden;
            
        }
        .form{

            margin-left: 355px;
            padding: 20px;
            border-radius: 8px;
            border:1px solid gray;
            background-color: black;
        }

        .form h3{

            padding: 20px 0px;
            color:#3498DB;
        }

        label{
            color:white;
        }

    </style>




<h4></h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 form">
        <h3>Signin</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" placeholder="Insert the user id" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input type="password" asp-for="Pass" class="form-control " placeholder="Insert the password"/>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Signin" class="btn btn-default" />



            </div>
        </form>
        <div>
            Don't have an account? <a asp-area="" asp-controller="Registrations" asp-action="Create">Register</a>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
