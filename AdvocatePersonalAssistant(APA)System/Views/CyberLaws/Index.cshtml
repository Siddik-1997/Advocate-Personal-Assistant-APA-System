@model IEnumerable<AdvocatePersonalAssistantSystem.Models.CyberLaw>

@{
    ViewData["Title"] = "Index";
}

<style>
    body{

        font-family:'raleway';
    }
    table{
        width:100%;
        border-collapse:collapse;
        font-size:18px;
        color:#04311d;
        text-align:justify;
        padding:20px;
        font-family:raleway;
    }
    th{
        background-color:#76D7C4;
        color:#fff;
        padding:10px;
        border:1px solid #d8dada;
    }
    td{
        background-color:#d1f5e8;
        padding:10px;
        border:1px solid #d8dada;



    }

</style>
    <div style="font-family:Arial">

        <h2>Cyber Laws</h2>

        <p>
            <a asp-action="Create"></a>
        </p>
        <p>
            @using (Html.BeginForm("Index", "CyberLaws", FormMethod.Get))
            {
                <b>Search By:</b> @Html.RadioButton("searchBy", "Law_no", true)<text>Law No  </text>
                @Html.RadioButton("searchBy", "LawName")<text>Law Name</text><br>
                @Html.TextBox("search")<input type="submit" value=" Search" />
            }
        </p>
        
        <table border="1" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Law_no)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LawName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Punishment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LDeails)
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4">No row match search criteria</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Law_no)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LawName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Punishment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LDeails)
                            </td>
                            

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
